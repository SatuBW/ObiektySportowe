<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:clickable="false"
    android:background="@drawable/boisko2"
    android:elevation="@dimen/abc_button_padding_horizontal_material"
    android:gravity="center"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false">

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Nowa rezerwacja"
        android:id="@+id/button_rezerwacja"
        android:background="@drawable/pilka1"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="46dp"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Moje rezerwacje"
        android:id="@+id/button_moje_rezeracje"
        android:textColor="#000000"
        android:background="@drawable/pilka1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="True Training"
        android:id="@+id/textView2"
        android:layout_marginTop="69dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="#5846868b"
        android:singleLine="false"
        android:textColor="#ffff421f"
        android:textStyle="bold"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Twoje miejsce trenowania "
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:textStyle="bold|italic"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="#fffffe00" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@drawable/linia"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@drawable/cien"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
