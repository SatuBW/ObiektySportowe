<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.satu.obiektysportowe.ReservationConfirmation"
    android:background="@drawable/boisko2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratuluje! Rezerwacja zostala utworzona pomyslnie.\nPonizej znajduja sie jej szczegoly:"
        android:id="@+id/textView7"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        android:background="@android:drawable/screen_background_light_transparent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout_print"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/screen_background_light_transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_object"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_date"
            android:layout_below="@+id/textView_object"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_startTime"
            android:layout_below="@+id/textView_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_endTime"
            android:layout_below="@+id/textView_startTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_duration"
            android:layout_below="@+id/textView_endTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_rate"
            android:layout_below="@+id/textView_duration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />
    </LinearLayout>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Zapisz PDF"
        android:id="@+id/button_PDF"
        android:hint="Generuje plik PDF z potwierdzeniem rezerwacji."
        android:visibility="invisible"
        android:background="@drawable/pilka1"
        android:layout_below="@+id/button_usun"
        android:layout_centerHorizontal="true" />
    <com.facebook.share.widget.ShareButton
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Moje rezerwacje"
        android:id="@+id/button_usun"
        android:background="@drawable/pilka1"
        android:layout_alignTop="@+id/button_nowa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Nowa rezerwacja"
        android:id="@+id/button_nowa"
        android:layout_gravity="bottom"
        android:background="@drawable/pilka1"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/linearLayout_print"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>