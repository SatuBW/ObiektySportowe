<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boisko2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:baselineAligned="false">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wyszukiwanie obiektÃ³w"
            android:id="@+id/textView8"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#ffff421f"
            android:textSize="25dp" />

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/screen_background_light_transparent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Typ"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_type"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="50dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Parametry"
            android:layout_weight="0.30"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@android:drawable/screen_background_light_transparent" />
        <EditText
            android:id="@+id/editText_adres"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Adres"
            android:background="@android:drawable/screen_background_light_transparent" />
        <EditText
            android:id="@+id/editText_nazwa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Nazwa obiektu"
            android:background="@android:drawable/screen_background_light_transparent" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Wyszukaj"
        android:id="@+id/button_szukaj"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pilka1" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</LinearLayout>